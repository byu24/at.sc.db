#!/bin/bash
#SBATCH -A gtrnd
#SBATCH -q genepool_shared
#SBATCH -J download_SRA_sc_010
#SBATCH -t 12:00:00
#SBATCH --mem-per-cpu=4000
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=4
#SBATCH --output=download_SRA_sc_010.out

module load python3
source activate /global/projectb/scratch/bjcole/env_STARsolo
cd /global/projectb/scratch/bjcole/at.sc.db/

mkdir scratch/sc_010
/global/projectb/scratch/bjcole/bin/sratoolkit.2.9.6-1-ubuntu64/bin/prefetch.2.9.3 SRR8206663 -o scratch/sc_010/sc_010.raw -t http
/global/projectb/scratch/bjcole/bin/sratoolkit.2.9.6-1-ubuntu64/bin/fasterq-dump scratch/sc_010/sc_010.raw \
  -o sc_010.fastq \
  -O /global/projectb/scratch/bjcole/at.sc.db/scratch/sc_010 \
  -t /global/projectb/scratch/bjcole/at.sc.db/scratch/sc_010 \
  -sS --include-technical
